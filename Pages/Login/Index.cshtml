@page
@model ROSESHIELD.WEB.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn {
        cursor: pointer !important;
    }
</style>

<br />
<div class="container row p-0 m-0">

    <div class="col-10">
        <h2 class="text-info">LISTA DE LOGINS ATIVOS</h2>
    </div>

    <div class="col-2">
        <a asp-page="/Login/CreateAccounts" class="btn btn-info form-control ">CRIAR USUARIOS</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Logins.Count() > 0)
            {
            <table id="users" class="table table-striped table-bordered flex-nowrap" style="width:100%;">
                <tr class="table-secondary">
                    <th>
                        <label>LOGIN USUARIO</label>
                    </th>
                    <th>
                        <label>SENHA UTILIZADA</label>
                    </th>
                </tr>
                @foreach (var item in Model.Logins)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.UsuarioAccesso.EmailUser)</td>
                        <td>@Html.DisplayFor(m => item.UsuarioAccesso.Password)</td>
                        <td>
                            <button asp-page-handler="DELETE" asp-route-id="@item.Id" onclick="return confirm('TEM CERTEZA QUE DESEJA EXCLUIR ESSE USUARIO?')" class="btn btn-danger btn-sm">DELETE</button>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDIT</a>
                        </td>
                    </tr>
                }

            </table>
            }
            else
            {
                <p>Nenhum usuario cadastrado...</p>
            }
        </form>
    </div>

</div>



@section Scripts{
    <script src="~/js/usersAccount.js"></script>                
}