@page
@model ROSESHIELD.WEB.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn {
        cursor: pointer !important;
    }
</style>

<br />
<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-info">Lista de Logins</h2>
    </div>
    <div class="col-2">
        <a asp-page="/Login/CreateAccounts" class="btn btn-info form-control ">Criar Usuarios</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form  method="post">
            @if(Model.Logins.Count() > 0){
               <table class="table table-striped border">
                         <tr class="table-secondary">
                             <th>
                                 <label asp-for="Logins.FirstOrDefault().UsuarioAccesso.EmailUser"></label>
                             </th>
                             <th>
                                 <label asp-for="Logins.FirstOrDefault().UsuarioAccesso.Password"></label>
                             </th>
                         </tr>
                         @foreach (var item in Model.Logins)
                         {
                           <tr>
                               <td>@Html.DisplayFor(m => item.UsuarioAccesso.EmailUser)</td>
                               <td>@Html.DisplayFor(m => item.UsuarioAccesso.Password)</td>
                               <td>
                                   <button class="btn btn-danger btn-sm">Delete</button>
                                   <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                               </td>
                           </tr>
                         }

                     </table>               
            }else {
                <p>Nenhum usuario cadastrado...</p>
            }
        </form>
    </div>
</div>