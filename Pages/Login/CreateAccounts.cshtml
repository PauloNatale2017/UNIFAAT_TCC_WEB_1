@page
@model ROSESHIELD.WEB.CreateAccountsModel
@{
    ViewData["Title"] = "CreateAccounts";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">CADASTRO BASICO DE ACESSO.</h2>
<br />

<div  class="border container" style="padding:30px;">
    <form method="post" >
        <div class="form-group row">
            <div class="col-sm-2">
                <label>NOME COMPLETO</label>
            </div>

            <div class="col-sm-6">
                <input asp-for="UserAccounts.NomeCompleto" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="UserAccounts.NomeCompleto" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>IDADE</label>

            </div>
            <div class="col-6">
                <input asp-for="UserAccounts.Idade" class="form-control date" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="UserAccounts.Idade" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>ENDEREÇO</label>
            </div>
            <div class="col-6">
                <input asp-for="UserAccounts.Endereco" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="UserAccounts.Endereco" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>CONTATO</label>
            </div>
            <div class="col-6">
                <input asp-for="UserAccounts.Contato" class="form-control phone_with_ddd" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="UserAccounts.Contato" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>CPF</label>
            </div>
            <div class="col-6">
                <input asp-for="UserAccounts.Cpf" class="form-control cpf" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="UserAccounts.Cpf" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label>CADASTRAR CIDADE</label>
            </div>
            <div class="col-3">
                <input  asp-for="UserAccounts.Cidade"  id="cidade_id" class="form-control" />
            </div>
            <div class="col-3">
                <label>CIDADES CADASTRADAS:</label>
            </div>
            <div class="col-3">
                @Html.DropDownListFor(x => Model.Options, new SelectList(Model.Options, "Value", "Text"), 
               htmlAttributes: new { @class = "form-control",
                                     id = "Id" , 
                                     ng_model = "Cidade", 
                                     onchange = "Change()" })
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="UserAccounts.Cidade" class="text-danger"></span>
            </div>
        </div>


        

        <hr />
        <div class="form-group row">
            <div class="col-3">
                <label>DIGITE SEU USUARIO</label>
            </div>
            <div class="col-7">
                <input asp-for="UserAccounts.UsuarioAccesso.EmailUser" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="UserAccounts.UsuarioAccesso.EmailUser" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>DIGITE UMA SENHA</label>
            </div>
            <div class="col-7">
                <input asp-for="UserAccounts.UsuarioAccesso.Password" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="UserAccounts.UsuarioAccesso.Password" class="text-danger"></span>
            </div>
        </div>




        <hr />


        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>

    </form>
</div>


<script type="text/javascript">


    function Change() {
            var select = document.getElementById("Id");
            var options = select.options[select.selectedIndex];
            //$scope.Cidade_Value = options.text
           document.getElementById("cidade_id").value = options.text
    };






</script>

<script src="~/js/Mascaras.js"></script>

@section Scripts{
  <partial name="_ValidationScriptsPartial" />
}
