@page
@model ROSESHIELD.WEB.ParceiroModel
@{
    ViewData["Title"] = "Parceiro";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn {
        cursor: pointer !important;
    }
</style>

<br />
<div class="container row p-0 m-0">

    <div class="col-8">
        <h2 class="text-info">LISTA DE PARCEIROS</h2>
    </div>

    <div class="col-4">
        <a asp-page="/Parceiro/CreateParceiro" class="btn btn-info form-control ">CADASTRAR PARCEIROS</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post" style="overflow:auto;">
            @if (Model.Parceiro.Count() > 0)
            {
                <table id="users" class="table table-striped table-bordered flex-nowrap" style="width:100%;">
                    <tr class="table-secondary">
                        <th>
                            <label>NOME EMPRESA</label>
                        </th>
                        <th>
                            <label>CNPJ/CPF</label>
                        </th>
                        <th>
                            <label>CONTATO</label>
                        </th>
                        <th>
                            <label>ENDEREÇO</label>
                        </th>
                        <th>
                            <label>T.VAGAS</label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Parceiro)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.NOMEEMPRESA)</td>
                            @*<td>@Html.DisplayFor(m => item.NomeFantasia)</td>
                                <td>@Html.DisplayFor(m => item.NomeOng)</td>*@
                            <td>@Html.DisplayFor(m => item.CNPJ_CPF)</td>
                            <td>@Html.DisplayFor(m => item.CONTATO)</td>
                            <td>@Html.DisplayFor(m => item.ENDERECO)</td>
                            <td>@Html.DisplayFor(m => item.TOTAL_VAGAS_CADASTRADAS)</td>
                            @*<td>@Html.DisplayFor(m => item.Cidade)</td>
                                <td>@Html.DisplayFor(m => item.Email)</td>*@
                        <td>
                            <button asp-page-handler="DELETE" asp-route-id="@item.Id" onclick="return confirm('TEM CERTEZA QUE DESEJA EXCLUIR ESSE CADASTRO?')" class="btn btn-danger btn-sm">DELETE</button>
                            <a asp-page="EditParceiro" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDIT</a>
                            <a asp-page="CreateVaga" asp-route-id="@item.Id" class="btn btn-success btn-sm">CAD.VAGAS</a>
                        </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>NENHUM USUARIO CADASTRADO...</p>
            }
        </form>
    </div>

</div>



@section Scripts{
    <script src="~/js/usersAccount.js"></script>
}



