@page
@model ROSESHIELD.WEB.EditParceiroModel
@{
    ViewData["Title"] = "EditParceiro";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">EDITAR CADASTRO PARCEIRO</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Parceiro.Id" class="form-control" />
        <div class="form-group row">
            <div class="col-sm-2">
                <label>RAZÃO SOCIAL</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Parceiro.NOMEEMPRESA" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Parceiro.NOMEEMPRESA" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-sm-2">
                <label>CNPJ/CPF</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Parceiro.CNPJ_CPF" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Parceiro.CNPJ_CPF" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label>CONTATO</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Parceiro.CONTATO" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Parceiro.CONTATO" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-2">
                <label>ENDEREÇO</label>
            </div>
            <div class="col-8">
                <input asp-for="Parceiro.ENDERECO" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Parceiro.ENDERECO" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>E-MAIL</label>
            </div>
            <div class="col-8">
                <input asp-for="Parceiro.EMAIL" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Parceiro.EMAIL" class="text-danger"></span>
            </div>
        </div>

      

        <hr />

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="UPDATE" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Parceiro" class="btn btn-success form-control">BACK TO LIST</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}




