@page
@model ROSESHIELD.WEB.SistemaModel
@{
    ViewData["Title"] = "Sistema";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<style type="text/css">
    .btn {
        cursor: pointer !important;
    }
</style>

<br />
<div class="container row p-0 m-0">

    <div class="col-8">
        <h2 class="text-info">LISTA DE SISTEMAS CADASTRADOS</h2>
    </div>

    <div class="col-4">
        <a asp-page="/Sistema/CreateSistema" class="btn btn-info form-control ">CADASTRAR SISTEMAS</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post" style="overflow:auto;">
            @if (Model.Sistemas.Count() > 0)
            {

                <table id="users" class="table table-striped table-bordered flex-nowrap" style="width:100%;">
                    <tr class="table-secondary">
                        <th>
                            <label>NOME DO SISTEMA</label>
                        </th>
                        <th>
                            <label>OPTIONS</label>
                        </th>
                        <th>
                            <label>URL</label>
                        </th>
                       
                    </tr>
                    @foreach (var item in Model.Sistemas)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.NomeSistema)</td>                        
                            <td>@Html.DisplayFor(m => item.Options)</td>
                            <td>@Html.DisplayFor(m => item.Url)</td>                      
                            <td>
                                <button asp-page-handler="DELETE" asp-route-id="@item.Id" onclick="return confirm('TEM CERTEZA QUE DESEJA EXCLUIR ESSE CADASTRO?')" class="btn btn-danger btn-sm">DELETE</button>
                                <a asp-page="EditSistema" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDIT</a>

                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>NENHUM SISTEMA CADASTRADO...</p>
            }
        </form>
    </div>

</div>



@section Scripts{

}


