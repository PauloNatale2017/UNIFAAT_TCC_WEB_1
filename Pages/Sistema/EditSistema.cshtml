@page
@model ROSESHIELD.WEB.EditSistemaModel
@{
    ViewData["Title"] = "EditSistema";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">EDITAR 0 SISTEMAS</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input asp-for="Sistemas.Id" type="hidden" class="form-control" />
        <div class="form-group row">
            <div class="col-sm-2">
                <label>NOME DO SISTEMA</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Sistemas.NomeSistema" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Sistemas.NomeSistema" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-sm-2">
                <label>OPTIONS</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Sistemas.Options" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Sistemas.Options" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label>URL</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Sistemas.Url" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Sistemas.Url" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <hr />

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="CREATE" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Sistema" class="btn btn-success form-control">BACK TO LIST</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}





