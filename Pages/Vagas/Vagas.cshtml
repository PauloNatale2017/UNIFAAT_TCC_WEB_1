@page
@model ROSESHIELD.WEB.VagasModel
@{
    ViewData["Title"] = "Vagas";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn {
        cursor: pointer !important;
    }
</style>

<br />
<div class="container row p-0 m-0">

    <div class="col-8">
        <h2 class="text-info">LISTA DE VAGAS</h2>
    </div>

    <div class="col-4">
        <a asp-page="/Vagas/CreateVagas" class="btn btn-info form-control ">CADASTRAR DE VAGAS</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post" style="overflow:auto;">
            @if (Model.Vagas.Count() > 0)
            {
                <table id="users" class="table table-striped table-bordered flex-nowrap" style="width:100%;">
                    <tr class="table-secondary">
                        <th>
                            <label>Nome da Vaga</label>
                        </th>
                        <th>
                            <label>Salario</label>
                        </th>
                        <th>
                            <label>Restrições</label>
                        </th>                        
                    </tr>
                    @foreach (var item in Model.Vagas)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.NomeVaga)</td>
                            @*<td>@Html.DisplayFor(m => item.NomeFantasia)</td>
                                <td>@Html.DisplayFor(m => item.NomeOng)</td>*@
                            <td>@Html.DisplayFor(m => item.ValorSalario)</td>
                            <td>@Html.DisplayFor(m => item.Restricoes)</td>                            
                            @*<td>@Html.DisplayFor(m => item.Cidade)</td>
                                <td>@Html.DisplayFor(m => item.Email)</td>*@
                            <td>
                                <button asp-page-handler="DELETE" asp-route-id="@item.Id" onclick="return confirm('TEM CERTEZA QUE DESEJA EXCLUIR ESSE CADASTRO?')" class="btn btn-danger btn-sm">DELETE</button>
                                <a asp-page="EditVagas" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDIT</a>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>NENHUMA VAGA CADASTRADO...</p>
            }
        </form>
    </div>

</div>



@section Scripts{

}


