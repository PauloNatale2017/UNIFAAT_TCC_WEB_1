@page
@model ROSESHIELD.WEB.VitimasModel
@{
    ViewData["Title"] = "Vitimas";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn {
        cursor: pointer !important;
    }
</style>

<br />
<div class="container row p-0 m-0">

    <div class="col-8">
        <h2 class="text-info">LISTA DE VITIMAS</h2>
    </div>

    <div class="col-4">
        <a asp-page="/Vitimas/CreateVitimas" class="btn btn-info form-control ">CADASTRAR BASICO DE VITIMAS</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post" style="overflow:auto;">
            @if (Model.VitimaBasic.Count() > 0)
            {
                <table id="users" class="table table-striped table-bordered flex-nowrap" style="width:100%;">
                    <tr class="table-secondary">
                        <th>
                            <label>NOME COMPLETO</label>
                        </th>
                        <th>
                            <label>RG/CPF</label>
                        </th>                       
                        <th>
                            <label>EMAIL</label>
                        </th>                       
                    </tr>
                    @foreach (var item in Model.VitimaBasic)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.NomeCompleto)</td>                       
                            <td>@Html.DisplayFor(m => item.Rg_CPF)</td>
                            <td>@Html.DisplayFor(m => item.Email)</td>                           
                            <td>
                                <button asp-page-handler="DELETE" asp-route-id="@item.Id" onclick="return confirm('TEM CERTEZA QUE DESEJA EXCLUIR ESSE CADASTRO?')" class="btn btn-danger btn-sm">DELETE</button>
                                <a asp-page="EditVitimas" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDIT</a>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>NENHUM USUARIO CADASTRADO...</p>
            }
        </form>
    </div>

</div>



@section Scripts{

}

