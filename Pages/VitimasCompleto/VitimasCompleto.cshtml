@page
@model ROSESHIELD.WEB.VitimasCompletoModel
@{
    ViewData["Title"] = "Vitimas";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<script src="~/js/jquery-3.2.1.js"></script>
<script src="~/js/angular.js"></script>
<script src="~/js/crossfilter.js"></script>
<script src="~/js/fusioncharts.js"></script>
<script src="~/js/angular-fusioncharts.js"></script>
<script src="~/js/angular-fusioncharts.min.js"></script>
<script src="~/js/fusioncharts.theme.fusion.js"></script>
<script src="~/js/fusioncharts.maps.js"></script>
<script src="~/js/ng-map.min.js"></script>
<script src="~/js/angular-block-ui.js"></script>
<link href="~/css/angular-block-ui.css" rel="stylesheet" />

<style type="text/css">
    .btn {
        cursor: pointer !important;
    }
</style>

<br />

<div class="container row p-0 m-0" ng-controller="VitimasCompleto">

    <div class="col-10">
        <h2 class="text-info">LISTA DE VITIMAS COM CADASTRO INCOMPLETO</h2>
    </div>

    <div class="col-2">
        <a class="btn btn-info form-control ">TOTAL:{{TOTALCADASTRADOINCOM}}</a>
    </div>

    <div class="col-12 border p-3 mt-3">   
        <div ng-repeat="itens in CadastroBasico">
            <table id="CadastrosBasicos"
                   class="table table-striped table-bordered flex-nowrap"
                   style="width:100%;">
                <tr class="table-secondary">
                    <th>
                        <label>NOME COMPLETO</label>
                    </th>
                    <th>
                        <label>COMPLEMENTAR:{{0}}%</label>
                    </th>
                    <th>
                        <label>OCORENCIA:{{0}}%</label>
                    </th>
                    <th>
                        <label>FILHOS:{{0}}%</label>
                    </th>
                    <th>
                        <label>IDOSO:{{0}}%</label>
                    </th>
                    <th>
                        <label>S.O.S:{{0}}%</label>
                    </th>
                </tr>
                <tr>
                    <td>{{itens.NomeCompleto}}</td>
                    <td><button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#COMPLEMENTAR_{{itens.Id}}">COMPLEMENTAR</button></td>
                    <td><button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#OCORRENCIAS_{{itens.Id}}">OCORENCIA</button></td>
                    <td><button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#FILHOS_{{itens.Id}}">FILHOS</button></td>
                    <td><button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#IDOSO_{{itens.Id}}">IDOSO</button></td>
                    <td><button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#SOS_{{itens.Id}}">S.O.S</button></td>
                </tr>
            </table>

            <div class="modal fade" id="COMPLEMENTAR_{{itens.Id}}">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title" style="text-align:center;">CADASTRO COMPLEMENTAR</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="container">                               
                                <div class="row" style="margin: 1px 1px 10px 1px;">
                                    <div class="col-xl-2">
                                        <label>Profissao</label>
                                    </div>
                                    <div class="col-xl-10">
                                        <input ng-model="Comp.Profissao" ype="text" class="form-control form-control">
                                    </div>
                                </div>
                                <div class="row" style="margin: 1px 1px 10px 1px;">
                                    <div class="col-xl-2">
                                        <label>RendaPessoal</label>
                                    </div>
                                    <div class="col-xl-10">
                                        <input ng-model="Comp.RendaPessoal" type="text" class="form-control form-control">
                                    </div>
                                </div>
                                <div class="row" style="margin: 1px 1px 10px 1px;">
                                    <div class="col-xl-2">
                                        <label>RendaFamiliar</label>
                                    </div>
                                    <div class="col-xl-10">
                                        <input ng-model="Comp.RendaFamiliar" type="text" class="form-control form-control">
                                    </div>
                                </div>
                                <div class="row" style="margin: 1px 1px 10px 1px;">
                                    <div class="col-xl-2">
                                        <label>Drogas Licitas</label>
                                    </div>
                                    <div class="col-xl-4">
                                        <input ng-model="Comp.drogaslicitasSIM" type="text" class="form-control form-control">
                                    </div>
                                    <div class="col-xl-2">
                                        <label>Quais Drogas </label>
                                    </div>
                                    <div class="col-xl-4">
                                        <input ng-model="Comp.QualdrogaDescri1" type="text" class="form-control form-control">
                                    </div>
                                </div>
                                <div class="row" style="margin: 1px 1px 10px 1px;">
                                    <div class="col-xl-2">
                                        <label>Drogas Não Licitas</label>
                                    </div>
                                    <div class="col-xl-4">
                                        <input ng-model="Comp.drogaslicitasNAO" type="text" class="form-control form-control">
                                    </div>
                                    <div class="col-xl-2">
                                        <label>Quais Drogas </label>
                                    </div>
                                    <div class="col-xl-4">
                                        <input ng-model="Comp.QualdrogaDescri2" type="text" class="form-control form-control">
                                    </div>
                                </div>
                             
                                <div class="row" style="margin: 1px 1px 10px 1px;">
                                    <div class="col-xl-2">
                                        <label>Possui filhos</label>
                                    </div>
                                    <div class="col-xl-4">
                                        <input ng-model="Comp.Possuifilhos" type="text" class="form-control form-control">
                                    </div>
                                    <div class="col-xl-2">
                                        <label>Qtdo</label>
                                    </div>
                                    <div class="col-xl-4">
                                        <input ng-model="Comp.Qtdo" type="text" class="form-control form-control">
                                    </div>
                                </div>                               
                                <div class="row" style="margin: 1px 1px 10px 1px;">
                                    <div class="col-xl-2">
                                        <label>Idoso</label>
                                    </div>
                                    <div class="col-xl-4">
                                        <input ng-model="Comp.Idoso" type="text" class="form-control form-control">
                                    </div>
                                    <div class="col-xl-2">
                                        <label>Quantidade</label>
                                    </div>
                                    <div class="col-xl-4">
                                        <input ng-model="Comp.Quantidade" type="text" class="form-control form-control">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" ng-click="SalvarComplemento(itens.Id)" class="btn btn-success" data-dismiss="modal">Salvar</button>
                            <button type="button" class="btn btn-info" data-dismiss="modal">Editar</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                        </div>

                    </div>
                </div>
            </div>

            <div class="modal fade" id="OCORRENCIAS_{{itens.Id}}">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title" style="text-align:center;">USUARIOS CADASTRADOS PARA A VAGA</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="container">
                                <table class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Nome Completo</th>
                                            <th>Rg/CPF</th>
                                            <th>E-Mail</th>
                                            <th>CANDIDATURA</th>
                                        </tr>
                                    </thead>
                                </table>


                            </div>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal fade" id="FILHOS_{{itens.Id}}">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title" style="text-align:center;">USUARIOS CADASTRADOS PARA A VAGA</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="container">
                                <table class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Nome Completo</th>
                                            <th>Rg/CPF</th>
                                            <th>E-Mail</th>
                                            <th>CANDIDATURA</th>
                                        </tr>
                                    </thead>
                                </table>


                            </div>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal fade" id="IDOSO_{{itens.Id}}">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title" style="text-align:center;">USUARIOS CADASTRADOS PARA A VAGA</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="container">
                                <table class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Nome Completo</th>
                                            <th>Rg/CPF</th>
                                            <th>E-Mail</th>
                                            <th>CANDIDATURA</th>
                                        </tr>
                                    </thead>
                                </table>


                            </div>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal fade" id="SOS_{{itens.Id}}">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title" style="text-align:center;">USUARIOS CADASTRADOS PARA A VAGA</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="container">
                                <table class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Nome Completo</th>
                                            <th>Rg/CPF</th>
                                            <th>E-Mail</th>
                                            <th>CANDIDATURA</th>
                                        </tr>
                                    </thead>
                                </table>


                            </div>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

  

</div>

<script src="~/js/VitimasCompleto.js"></script>

