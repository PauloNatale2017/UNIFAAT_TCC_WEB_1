@page
@model ROSESHIELD.WEB.EditGeoReferenciaModel
@{
    ViewData["Title"] = "EditGeoReferencia";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="border container" style="padding:30px;">
    <form method="post">

        <div class="form-group row">
            <div class="col-sm-2">
                <label>ENDEREÇO</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Geo.Endereco" class="form-control" /> @*ng-model="ModelEndereco"*@
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Geo.Endereco" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-sm-2">
                <label>CEP</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Geo.CEP" class="form-control cep" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Geo.CEP" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label>COMPLEMENTO DE ENDEREÇO</label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Geo.Complemento" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <a href="https://www.latlong.net/" target="_blank">>SITE GEO</a>
                @*<button ng-click="GeoReferenciaGet()" class="btn btn-info" value="">BUSCAR GEO</button>*@
            </div>

        </div>



        <div class="form-group row">
            <div class="col-2">
                <label>GEOREFERENCIA (LAT)</label>
            </div>
            <div class="col-8">
                <input asp-for="Geo.Lat" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Geo.Lat" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>GEOREFERENCIA (LONG)</label>
            </div>
            <div class="col-8">
                <input asp-for="Geo.Long" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Geo.Long" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>SELECIONAR O USUARIO PARA ESSA REFERENCIA</label>
            </div>
            <div class="col-8">
                <input asp-for="Geo.IdUsuario" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Geo.IdUsuario" class="text-danger"></span>
            </div>
        </div>



        <hr />

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="CREATE" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="GeoReferecia" class="btn btn-success form-control">BACK TO LIST</a>
            </div>

        </div>

    </form>
</div>

<script src="~/js/Mascaras.js"></script>