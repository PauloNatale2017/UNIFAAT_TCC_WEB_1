@page
@model ROSESHIELD.WEB.OngModel
@{
    ViewData["Title"] = "Ong";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn {
        cursor: pointer !important;
    }
</style>

<br />
<div class="container row p-0 m-0">

    <div class="col-8">
        <h2 class="text-info">LISTA DE ONGS</h2>
    </div>

    <div class="col-4">
        <a asp-page="/Ong/CreateOng" class="btn btn-info form-control ">CADASTRAR ONGS</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post" style="overflow:auto;">
            @if (Model.Ong.Count() > 0)
            {
                <table id="users" class="table table-striped table-bordered flex-nowrap" style="width:100%;">
                    <tr class="table-secondary">
                        <th>
                            <label>RAZÃO SOCIAL</label>
                        </th>                       
                        <th>
                            <label>CNPJ/CPF</label>
                        </th>
                        <th>
                            <label>CONTATO</label>
                        </th>
                        <th>
                            <label>ENDEREÇO</label>
                        </th>
                        <th>
                            <label>T.FUNCIONARIOS</label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Ong)
                    {
                <tr>
                    <td>@Html.DisplayFor(m => item.RazaoSocial)</td>
                    @*<td>@Html.DisplayFor(m => item.NomeFantasia)</td>
                    <td>@Html.DisplayFor(m => item.NomeOng)</td>*@
                    <td>@Html.DisplayFor(m => item.CNPJ_CPF)</td>
                    <td>@Html.DisplayFor(m => item.Contato)</td>
                    <td>@Html.DisplayFor(m => item.Endereco)</td>
                    <td>@Html.DisplayFor(m => item.TotalFuncionarios)</td>
                    @*<td>@Html.DisplayFor(m => item.Cidade)</td>
                    <td>@Html.DisplayFor(m => item.Email)</td>*@
                    <td>
                        <button asp-page-handler="DELETE" asp-route-id="@item.Id" onclick="return confirm('TEM CERTEZA QUE DESEJA EXCLUIR ESSE CADASTRO?')" class="btn btn-danger btn-sm">DELETE</button>
                        <a asp-page="EditOng" asp-route-id="@item.Id" class="btn btn-success btn-sm">EDIT</a>
                    </td>
                </tr>
                    }

                </table>
            }
            else
            {
                <p>NENHUM USUARIO CADASTRADO...</p>
            }
        </form>
    </div>

</div>



@section Scripts{
    
}

