<br />
<h2 class="text-info">CADASTRO BASICO DE ONGS.</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-sm-2">
                <label>RAZÃO SOCIAL</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Ong.RazaoSocial" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Ong.RazaoSocial" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <input class="cep" type="text" name="name" value="" />
        <input type="text" name="field-name" data-mask="00/00/0000" />
        <input type="text" name="field-name" data-mask="00/00/0000" />

        <div class="form-group row">
            <div class="col-sm-2">
                <label>NOME FANTASIA</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Ong.NomeFantasia" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Ong.NomeFantasia" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-4">
                <label>NOME (COMO A ONG E CONHECIDA)</label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Ong.NomeOng" class="form-control" />
            </div>
            <br />
            <div class="col-sm-4">
                <span asp-validation-for="Ong.NomeOng" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-2">
                <label>CNPJ/CPF</label>
            </div>
            <div class="col-8">
                <input ui-mask="99.999.999/9999-99" asp-for="Ong.CNPJ_CPF" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Ong.CNPJ_CPF" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>CONTATO</label>
            </div>
            <div class="col-8">
                <input asp-for="Ong.Contato" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Ong.Contato" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>EMAIL</label>
            </div>
            <div class="col-6">
                <input asp-for="Ong.Email" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Ong.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label>ENDEREÇO</label>
            </div>
            <div class="col-6">
                <input asp-for="Ong.Endereco" class="form-control" />
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Ong.Endereco" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-3">
                <label>CIDADE</label>
            </div>
            <div class="col-7">
                <input asp-for="Ong.Cidade" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="Ong.Cidade" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>EMAIL</label>
            </div>
            <div class="col-7">
                <input asp-for="Ong.Email" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="Ong.Email" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="CREATE" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Ong" class="btn btn-success form-control">BACK TO LIST</a>
            </div>
        </div>

    </form>
</div>

